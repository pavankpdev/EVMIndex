{
  "name": "evmindex",
  "version": "2.0.1",
  "description": "**EVMIndex** is a plug-and-play blockchain indexer for EVM chains, designed to simplify the process of indexing and retrieving blockchain data. With **EVMIndex**, you can easily set up your own EVM chain indexer on your infrastructure and use simple APIs to retrieve the indexed data.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc & babel src --out-dir dist --copy-files",
    "dev": "npx ts-node -r tsconfig-paths/register src/index",
    "generate": "npx ts-node src/scripts/build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --write \"**/*.ts\"",
    "prettier:check": "prettier --check \"**/*.ts\"",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage",
    "test:watch": "jest --watch --verbose false --silent false"
  },
  "keywords": [],
  "author": "pavankpdev",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^18.15.11",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fake-indexeddb": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.ts": [
      "pnpm run lint:fix",
      "pnpm run prettier:check",
      "pnpm run prettier",
      "git add"
    ]
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.5.17",
    "@graphql-tools/load": "^7.8.14",
    "@graphql-tools/schema": "^9.0.19",
    "@typechain/ethers-v5": "^10.2.0",
    "@types/js-yaml": "^4.0.5",
    "dotenv": "^16.0.3",
    "rxdb": "^14.16.0",
    "rxjs": "^7.8.1",
    "ts-node": "^10.9.1",
    "uuid": "^9.0.0",
    "viem": "^1.19.11"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pavankpdev/EVMIndex.git"
  },
  "bugs": {
    "url": "https://github.com/pavankpdev/EVMIndex/issues"
  },
  "homepage": "https://github.com/pavankpdev/EVMIndex#readme"
}
